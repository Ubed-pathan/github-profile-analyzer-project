{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // ✅ Required for JSX support
    "types": ["react", "react-dom"] // ✅ Add this to fix JSX namespace
  },
  "include": ["src"]
}
